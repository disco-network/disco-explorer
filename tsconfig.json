{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES5",
        "module": "amd",
        "removeComments": true,
        "moduleResolution": "classic",
        "sourceMap": false,
        "declaration": false,
        "outDir": "scripts"
    },
    "include": [
        "source/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}